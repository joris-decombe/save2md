{
  "manifest_version": 3,
  "name": "Save2MD",
  "short_name": "Save2MD",
  "version": "1.0.0",
  "description": "Save any web page as a clean Markdown file. Right-click to save with optional image support and automatic ad filtering.",
  "homepage_url": "https://github.com/joris-decombe/save2md",
  "minimum_chrome_version": "88",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "storage",
    "downloads"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
